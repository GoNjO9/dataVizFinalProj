{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"jsx": "react",
		"paths": {
			"@client/*": ["./src/client/*"],
			"@server/*": ["./src/server/*"],
			"@types/*": ["./src/types/*"]
		},
		"sourceMap": true,
		"verbatimModuleSyntax": true,

		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*.ts"]
}